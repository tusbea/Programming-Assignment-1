
<%= form_for :user, url: login_create_path do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% else %>
    <p>Please enter your credentials below</p>
  <% end %>

  <p>
    <%= f.label 'Username: ' %>
    <%= f.text_field :username %>
  </p>

  <p>
    <%= f.label 'Password: ' %>
    <%= f.password_field :password %>
  </p>

  <p>
  <%= submit_tag 'Login', :name => 'login' %>
  <%= submit_tag 'Add User', :name => 'add' %>
<% end %>

<table>
  <tr>
    <th>Username</th>
    <th>Password</th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.password%></td>
    </tr>
  <% end %>
</table>
